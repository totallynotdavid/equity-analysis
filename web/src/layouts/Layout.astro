<style is:global>
	/* Refined Color Palette (Cool Slate & Gray) */
	:root {
		--background: 220 13% 97%; /* Lighter Gray */
		--foreground: 220 9% 26%; /* Dark Slate Gray */

		--card: 220 13% 100%;
		--card-foreground: 220 9% 26%;

		--popover: 220 13% 100%;
		--popover-foreground: 220 9% 26%;

		--primary: 215 28% 42%; /* Primary Slate Blue */
		--primary-foreground: 210 40% 98%;

		--secondary: 220 13% 91%;
		--secondary-foreground: 215 28% 42%;

		--muted: 220 13% 91%;
		--muted-foreground: 215 16% 52%;

		--accent: 220 13% 91%;
		--accent-foreground: 215 28% 42%;

		--border: 220 13% 88%;
		--input: 220 13% 88%;
		--ring: 215 28% 42%;

		--radius: 0.5rem;
	}

