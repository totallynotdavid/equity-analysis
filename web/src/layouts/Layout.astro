---
import "@/styles/global.css";
import "@/styles/starwind.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Equity Analysis" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Equity Analysis</title>

    <!-- Google Fonts Import: Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body
    class="bg-background text-foreground min-h-screen font-sans antialiased"
  >
    <slot />
  </body>
</html>

<style is:global>
  /* Refined Color Palette (Cool Slate & Gray) */
  :root {
    --background: 220 13% 97%; /* Lighter Gray */
    --foreground: 220 9% 26%; /* Dark Slate Gray */

    --card: 220 13% 100%;
    --card-foreground: 220 9% 26%;

    --popover: 220 13% 100%;
    --popover-foreground: 220 9% 26%;

    --primary: 215 28% 42%; /* Primary Slate Blue */
    --primary-foreground: 210 40% 98%;

    --secondary: 220 13% 91%;
    --secondary-foreground: 215 28% 42%;

    --muted: 220 13% 91%;
    --muted-foreground: 215 16% 52%;

    --accent: 220 13% 91%;
    --accent-foreground: 215 28% 42%;

    --border: 220 13% 88%;
    --input: 220 13% 88%;
    --ring: 215 28% 42%;

    --radius: 0.5rem;

    /* Status Colors */
    --info: 200 90% 50%;
    --info-foreground: 210 40% 98%;
    --success: 145 63% 42%;
    --success-foreground: 210 40% 98%;
    --warning: 38 92% 50%;
    --warning-foreground: 210 40% 98%;
    --error: 0 84% 60%;
    --error-foreground: 210 40% 98%;
  }
</style>
